@model MyContactsDigital.Models.Category

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Category</h1>

<div class="row">
    <div class="col-12">
        <form asp-action="Edit" class="mt-5">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="AppUserId" />
            <div class="form-group">
                <label asp-for="Name" class="form-label">Edit Category Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group text-end mt-2">
                <input type="submit" value="Save" class="btn btn-primary rounded-pill btnlinks" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
